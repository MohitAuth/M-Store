{{# each products }}

<div class="row">
    {{# each this }}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{this.imagePath}}" alt="..." class="img-responsive"><br/>
            <div class="clearfix">
                <div class="caption pull-left">
                    <strong>{{this.title}}</strong>
                </div><br/><br/>
                <div class="price pull-left">${{this.price}}</div>
                <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button"><i
                        class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>

            </div>

        </div>

    </div>
    {{/each}}
</div>

{{/each}}